@{ 
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UnityAuthorization</title>
    <environment include="Development">
        <link rel="stylesheet" href="~/css/login.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/login.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <div class="container">
        <form method="post" role="form" id="login-form">
            <div class="form-group">
                <label for="firstname">账号：</label>
                <input type="text" id="Name" class="form-control" name="Name" placeholder="请输入账号名">
            </div>
            <div class="form-group">
                <label for="lastname">密码：</label>
                <input type="password" class="form-control" id="Password" name="Password" placeholder="请输入密码">
            </div>
            <div class="form-group">
                <label>
                    <input type="checkbox" name="RemeberMe"> 请记住我
                </label>
            </div>
            <div>
                <button class="btn btn-submit" type="submit">登录</button>
            </div>
        </form>
    </div>
</body>
</html>


